# Required
API_KEY=replace-me-strong-key

# Optional
LOG_LEVEL=INFO
RATE_LIMIT_PER_MIN=120
RATE_LIMIT_BURST=150
REQUEST_TIMEOUT_SEC=20
REQUEST_RETRIES=2
ALLOWED_ENGINES=postgres,mysql
MAX_CLUSTERS_PER_TENANT=5
CORS_ALLOW_ORIGINS=*
EVERESTCTL_PATH=/usr/local/bin/everestctl
RBAC_POLICY_PATH=/data/policy.csv
DB_PATH=/data/audit.db
# If set, Postgres is used for audit/counters instead of SQLite
# Example: postgresql://user:pass@host:5432/dbname
DB_URL=
METRICS_ENABLED=true
HEALTH_STARTUP_PROBE_CMD=version
WEB_CONCURRENCY=2
GUNICORN_TIMEOUT=60
GUNICORN_GRACEFUL_TIMEOUT=30
SKIP_CLI_CHECK=false
